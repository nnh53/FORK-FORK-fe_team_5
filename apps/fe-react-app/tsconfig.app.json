{
  // "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true, //đi chung erasableSyntaxOnly
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // "erasableSyntaxOnly": true, // đi chung verbatimModuleSyntax
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* tự thêm */
    "importHelpers": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/schema-from-be": ["./schema-from-be.d.ts"]
    },

    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"]
  },
  "include": [
    "src",
    "src/types/react-time-picker-dropdown.d.ts",
    "cypress/component/SearchBar.cy.tsx",
    "cypress/component/Filter.cy.tsx",
    "cypress/component/SelectField.cy.tsx"
  ],
  "exclude": [
    "dist",
    "vite.config.ts",
    "vite.config.js",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "cypress.config.mjs",
    "cypress.config.js",
    "test/**/*",
    "*.cy.*",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "**/*.cy.js",
    "**/*.cy.jsx",
  ]
}
